{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [ "github>nils-a/renovate-config" ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchPackagePrefixes": ["actions/"],
      "labels": ["build"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
